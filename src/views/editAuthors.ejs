<!-- Form-EditAuthors--> 
<div class="container">
    <div class="row">
      <div class="col-md-12"> 
        <div class="panel">
          <div class="panel-body">
            <div class="container">
              <h1 style="color: black;">Edit Authors</h1>
              <div class="row">
                <div class="col-md-4" style="border: solid rgb(3, 100, 35) 4px;">
                  <form method="POST" action="/authors/update" name="editBooks" class="pb-5">
                      <div class="form-group" style="padding-top: 15px;">
                        <label for="author"><b> Author</b></label>
                        <input type="text" placeholder="Author name" name="author" value="<%=author.author%>" style="margin-left: 62px;"><br>
                      </div>
                      <div class="form-group">
                        <label for="title"><b>Book</b></label>
                        <input type="text" placeholder="Books name" name="books" value="<%=author.books%>" style="margin-left: 73px;"><br>
                      </div>
                      <div class="form-group">
                        <label for="author"><b>Description</b></label>
                        <input type="text" placeholder="Description" name="description" value="<%=author.description%>" style="margin-left: 31px;"><br>
                      </div>
                      <div class="form-group">
                        <label for="author"><b>Image</b></label>
                      <input type="file" name="image" value="<%=author.image%>" style="margin-left: 111px; margin-top: -25px;"><br>
                      </div>
                      <div class="form-group">
                        <input type="hidden" value="<%=author._id%>" name="id">
                        <button type="submit" class="btn btn-primary">Update Book</button>
                      </div>
                  </form>
                  <form action="/authors/delete/<%=author._id%>" >
                      <input type="hidden" value="<%=author._id%>" name="id">
                      <button type="submit" class="btn btn-primary" style="margin-top: -86px; margin-left: 38%;">Delete Book</button>
                  </form>
                </div>
              </div>
            </div>
            <hr>
            <!--/books-->
          </div>
        </div>                                           
      </div><!--/col-12-->
    </div>
  </div> 

